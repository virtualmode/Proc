{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Proc",
            "type": "shell",
            "command": "echo Implement cross-platform build.",
            "windows": {
                "command": "${workspaceFolder}\\Temp\\windows.bat ${input:target} ${input:configuration} ${input:platform}"
            },
            "group":
            {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Tests",
            "type": "shell",
            "command": "echo 'Tests not implemented.'",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": [
                "Proc"
            ],
        }
    ],
    "inputs": [
        {
            "id": "target",
            "type": "pickString",
            "description": "What target do you want to use?",
            "options": [
                "all",
                "rebuild",
                "clean"
            ],
            "default": "all"
        },
        {
            "id": "configuration",
            "type": "pickString",
            "description": "What configuration do you want to use?",
            "options": [
                "debug",
                "release"
            ],
            "default": "debug"
        },
        {
            "id": "platform",
            "type": "pickString",
            "description": "What platform do you want to use?",
            "options": [
                "x86",
                "amd64"
            ],
            "default": "amd64"
        },
        {
            "id": "target",
            "type": "pickString",
            "description": "What target do you want to use?",
            "options": [
                "all",
                "rebuild",
                "clean"
            ],
            "default": "all"
        }
    ]
}
